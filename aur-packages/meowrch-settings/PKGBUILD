# Maintainer: dimflix <dimflix.official@gmail.com>
pkgname=meowrch-settings
pkgver=2.0.0
pkgrel=1
pkgdesc="System optimization settings for Meowrch distribution"
arch=('any')
url="https://github.com/meowrch/meowrch"
license=('MIT')
depends=('systemd' 'zram-generator' 'pipewire' 'earlyoom' 'pciutils')
optdepends=('nvidia-utils: for NVIDIA GPU optimizations'
            'amd-ucode: for AMD CPU microcode'
            'intel-ucode: for Intel CPU microcode'
            'hdparm: for HDD performance optimizations')
install=meowrch-settings.install
source=()
sha256sums=()

package() {
    # Copy organized structure from build directory
    cp -r "$startdir/etc" "$pkgdir/"
    cp -r "$startdir/usr" "$pkgdir/"
    
    # Install systemd configuration files
    install -Dm644 "$startdir/systemd-conf/system.conf.d/00-timeout.conf" "$pkgdir/etc/systemd/system.conf.d/00-timeout.conf"
    install -Dm644 "$startdir/systemd-conf/system.conf.d/limits.conf" "$pkgdir/etc/systemd/system.conf.d/limits.conf"
    install -Dm644 "$startdir/systemd-conf/journald.conf.d/00-journal-size.conf" "$pkgdir/etc/systemd/journald.conf.d/00-journal-size.conf"
}
